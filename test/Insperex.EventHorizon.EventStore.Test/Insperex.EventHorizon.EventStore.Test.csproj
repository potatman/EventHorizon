      <ProjectReference Include="..\..\src\Insperex.EventHorizon.EventStore.MongoDb\Insperex.EventHorizon.EventStore.MongoDb.csproj" />
    </ItemGroup>

    <ItemGroup>
        <None Update="appsettings*.json">
